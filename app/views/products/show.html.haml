= render 'root/header'

.item-main-container
  .item-box-container
    .item-box-container_item-cover
      %h1.item-box-container_item-cover__item-name
        = @product.name
      .item-box-container_item-cover__item-main-content
        .item-photo
          .owl-carousel.owl-loaded.owl-drag
            .owl-stage-outer
              = image_tag @image1.url, size: "100x100"
            .owl-dots
              = image_tag @image1.url, size: "100x100"
              = image_tag @image2.url, size: "100x100"
              = image_tag @image3.url, size: "100x100"
              = image_tag @image4.url, size: "100x100"
        = render "product-right-inf"
        = render "product-down-inf"
        %p.product-buy
          = link_to transaction_buy_index_path, class: "product-buy_btn" do
            = '購入画面に進む'
        .item-description 
          %p.item-description-inner
            = @product.description
        .item-button-container.clearfix
          .item-button-left
            %button.item-button.item-button-like
              %span ♡  いいね!
              %span.fade-in-down  8
            %button.item-button.item-button-report.clearfix
              %span ✔︎  不適切な商品の報告
          .item-button-right
            %button.item-button-safe
              %span ※  あんしん・あんぜんへの取り組み

  = render "product-comment"
  = render "product-link"
  = render "product-sns"
  = render "product-user-profile"
= render 'root/footer'
