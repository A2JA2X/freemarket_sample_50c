%section.mypage-tab_container_notification-todo
  %ul.mypage-tabs
    %li.mypage-tabs_2
      = link_to 'お知らせ',root_index_path,class: "mypage-tabs_2_notification"
    %li.mypage-tabs_2
      = link_to 'やることリスト',root_index_path,class: "mypage-tabs_2_todo"

  .tab-content
    %ul#tab-content-notification.mypage-item_list
      -# %li(お知らせを配列で)
      %li.mypage-item_links
        %a{href: root_index_path, class: "mypage-item_links_link",data_open: "model",data_model: "banner"}
          %img{alt: "" ,src:"//static.mercdn.net/images/mercari_profile.png",class: "news-size-icon",data_src:"//static.mercdn.net/images/mercari_profile.png"}
          .mypage-item-news
            .mypage-item-news_text お知らせ①
            .mypage-item-news_time
              %i.icon-time
              %span ２日前
          %i.icon-arrow-icon

      %li.mypage-go-list
        = link_to '一覧を見る',root_index_path,class: "mypage-go-list"

